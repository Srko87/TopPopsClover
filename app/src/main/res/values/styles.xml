<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#F35677</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/sexyRed</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/filter_icon</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="overflowMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
